@{
    Layout = "~/areas/bwum/views/shared/_indexlayout.cshtml";
}

@model IEnumerable<BaWuClub.Web.Dal.ViewDocument>
<div class="comm-btns">
    <h2>文档下载管理</h2>
    <div class="comm-btns-wrap">
        <a class="comm-btn0 iconfont icon-shuaxin" href="#" onclick="window.location.reload()"></a>
        <a class="btn comm-btn2" href="#" data-url="/bwum/down/multidel">删除</a>
        <a class="btn comm-btn0" href="#" data-url="/bwum/down/setdisable">审核不通过</a>
        <a class="btn comm-btn1" href="#" data-url="/bwum/down/setenable">审核通过</a>
    </div>
</div>

<div id="notic-wrap">
    @Html.Raw(ViewBag.statusStr)
</div>
<form name="form" id="form" method="post">
    <table>
        <thead>
            <tr>
                <td><input type="checkbox" id="chk-all" onclick="cheakall(this)" /></td>
                <td>Id</td>
                <td>标题</td>
                <td>作者</td>
                <td>浏览量</td>
                <td>下载量</td>
                <td>状态</td>
                <td>发布时间</td>
                <td>更多操作</td>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (BaWuClub.Web.Dal.ViewDocument view in Model)
                    {
                        var title = view.Title.Length > 100 ? view.Title.Substring(0, 99) : view.Title;
                        <tr>
                            <td><input type="checkbox" name="chk" value="@view.Id" /></td>
                            <td>@view.Id</td>
                            <td>@title</td>
                            <td>@view.NickName</td>
                            <td>@view.Views</td>
                            <td>@view.Downs</td>                            <td>@Html.Raw(BaWuClub.Web.Common.HtmlCommon.GetStatusCodeToStr((int)view.Status))</td>
                            <td>@view.VarDate</td>
                            <td><a href="#/down/show/@view.Id">预览审核</a><a onclick="ajaxdelete('/down/del/',@view.Id)">删除</a></td>
                        </tr>
                    }
                }

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="10">
                    @Html.Raw(ViewBag.PageHtmlStr)
                </td>
            </tr>
        </tfoot>
    </table>
</form>