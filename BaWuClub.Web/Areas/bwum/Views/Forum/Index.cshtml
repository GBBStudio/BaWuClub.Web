@{
    Layout = "~/areas/bwum/views/shared/_indexlayout.cshtml";
}

@model IEnumerable<BaWuClub.Web.Dal.TopicCategory>
<div class="comm-btns">
    <h2>论坛模块(Forum)</h2>
    <div class="comm-btns-wrap">
        <a class="comm-btn0 iconfont icon-shuaxin" href="#" onclick="window.location.reload()"></a>
        <a class="comm-btn1 btn-general" href="#/forum/Create">创建</a>
    </div>
</div>

<div id="notic-wrap">
    @Html.Raw(ViewBag.statusStr)
</div>
<form name="form" id="form" method="post">
    <table>
        <thead>
            <tr>
                <td><input type="checkbox" id="chk-all" onclick="cheakall(this)" /></td>
                <td>Id</td>
                <td>名称</td>
                <td>变量</td>
                <td>级别</td>
                <td>更多操作</td>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (BaWuClub.Web.Dal.TopicCategory a in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="chk" value="@a.Id" /></td>
                            <td>@a.Id</td>
                            <td>@a.Name</td>
                            <td>@a.Variable</td>
                            <td>顶级</td>
                            <td><a href="#/forum/edit/@a.Id">编辑</a></td>
                        </tr>
                    }
                }

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="10">
                    @Html.Raw(ViewBag.PageHtmlStr)
                </td>
            </tr>
        </tfoot>
    </table>
</form>