@{
    Layout = "~/views/shared/_layoutmember.cshtml";
    ViewBag.Title = "个人用户中心-";
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.User;
}
<div class="member-title">
    <a href="/member/u-@user.Id/Show">资料</a>
    <a href="/member/u-@user.Id/contributelist" class="selected">投稿</a>
    <a href="/member/u-@user.Id/asks">问题</a>
    <a href="/member/u-@user.Id/answers">回答</a>
    <a href="/member/u-@user.Id/certification">认证</a>
    <a href="/member/u-@user.Id/shared">共享</a>
    <a href="/member/u-@user.Id/discuss">论坛</a>
    <a href="/member/u-@user.Id/message">私信</a>
</div>
    <div class="member-main">
        <div class="member-contributions">
            <div class="member-main-wrap">
                <div class="input-box">
                    <form name="form" method="post" onsubmit="SetEditorValue();return checkSubmit(this);">
                        <label id="tips-wrap" style="color:red;"></label>
                        <p><b>标题：</b><input name="title" value="" class="input-text" type="text" data-hint="标题不能为空！" data-required="true" /></p>
                        <p><b>标签：</b><input name="tags" value="" class="input-text" type="text"/><span>多标签请用,隔开</span></p>
                        <div class="input-box-ha">
                            <b>内容：</b>
                            <textarea name="editor" id="editor"></textarea>
                        </div>
                        <p>
                            <b>&nbsp;</b><input type="submit" value="提交" class="btn-sub" />
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

<script type="text/javascript" src="~/content/scripts/jquery.js"></script>
<script type="text/javascript" src="~/content/scripts/member.js"></script>
<script type="text/javascript" src="~/content/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    var editor = CKEDITOR.replace('editor');
    function SetEditorValue() {
        var context = editor.document.getBody().getText(); //头像的上传与投稿冲突
        var textarea = document.getElementsByTagName("textarea")[0];
        textarea.value = context;
    }
</script>