@{
    Layout = "~/views/shared/_layout.cshtml";
    //ViewBag.Title = "电商圈-";
    ViewBag.CssAppend = "<link href=\"/content/css/discuss.css\" type=\"text/css\" rel=\"stylesheet\"/>";
    ViewBag.CssAppend += "<link href=\"/content/fonts/category.css\" type=\"text/css\" rel=\"stylesheet\"/>";
}
@model BaWuClub.Web.Dal.ViewTopic
@{
    var reviews = ViewBag.reviews as IEnumerable<BaWuClub.Web.Dal.ViewTopicReview>;
    ViewBag.Title += Model.Title + "-电商圈-";
 }
    <div class="forum-wrap">
        <div class="container">
            <div class="container-left forum-block fleft">
                <div class="crumbs-wrap">
                    <a href="/">首页</a>&raquo;<a href="/forum/cliques">电商圈</a>&raquo;<span>显示</span>
                </div>
                <div class="topic-show">
                    <div class="topic-s-title">
                        <h2>@Model.Title</h2>
                        <p>来自:@Model.NickName 时间:@Model.VarDate</p>
                    </div>
                    <div class="topic-s-text">
                        @Html.Raw(Model.Context)
                    </div>
                    <div class="topic-s-reviews">
                        <div class="topic-s-reviews-title">
                            @reviews.Count()条回复
                        </div>
                        <div class="topic-s-reviews-list">
                            <ul>
                                @{
                                    if (reviews != null)
                                    {
                                        foreach (var review in reviews)
                                        {
                                            var cover = (string.IsNullOrEmpty( review.Cover ) ?  "~/Content/Images/no-img.jpg":"/uploads/avatar/small/" + review.Cover );
                                            <li>
                                                <div class="reviews-cover fleft">
                                                    <a href="/member/u-@review.UserId/show">
                                                        <img src="@cover" />
                                                    </a>
                                                </div>
                                                <div class="reviews-content"> 
                                                    <div class="reviews-info">
                                                        <a href="/member/u-@review.UserId/show">@review.NickName</a>
                                                        <span>@(((DateTime)review.VarDate).ToString("yyyy年MM月dd日"))</span>
                                                    </div>
                                                    <div class="reviews-text">
                                                        @Html.Raw(review.Reviews)
                                                    </div>
                                                    <div class="reviews-btns" style="display:none;">
                                                        <a href="#">回复</a>
                                                        <a href="#">赞</a>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                        <div class="topic-s-reviews-editor input-box">
                            <h3>评论</h3>
                            <form name="form" method="post" action="/forum/postreviews">
                                <input id="editor" name="context" />
                                <p><input name="submit" type="button" value="立即评论" class="btn-sub" onclick="reviews(@Model.Id,'/forum/postreviews')" /></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-right fright">
                @{
                    RenderPartialExtensions.RenderPartial(Html, "~/views/shared/_PartialRightListTask.cshtml", ViewBag.taskRightList);
                    RenderPartialExtensions.RenderPartial(Html, "~/views/shared/_PartialRightListActivity.cshtml", ViewBag.activityRightList);
                 }
                <div class="forum-r-banner">
                    <a href="#"><img src="~/Content/Images/b-1.jpg" /></a>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/content/Ckeditor-Base/ckeditor.js"></script>
    <script type="text/javascript">
        var editor = CKEDITOR.replace('editor');
    </script>
    <script type="text/javascript" src="~/content/Scripts/reviews.js"></script>
