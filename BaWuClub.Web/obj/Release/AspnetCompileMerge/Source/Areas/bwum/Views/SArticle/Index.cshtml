@{
    Layout = "~/areas/bwum/views/shared/_indexlayout.cshtml";
}

@model IEnumerable<BaWuClub.Web.Dal.SystemArticle>
<div class="comm-btns">
    <h2>系统文章管理</h2>
    <div class="comm-btns-wrap">
        <a class="comm-btn0 iconfont icon-shuaxin" href="#" onclick="window.location.reload()"></a>
        <a class="comm-btn1 btn-general" href="#/sarticle/Create">创建</a>
        <a class="btn comm-btn0" href="#" data-url="/sarticle/setdisable">不显示</a>
        <a class="btn comm-btn1" href="#" data-url="/sarticle/setenable">显示</a>
    </div>
</div>

<div id="notic-wrap">
    @Html.Raw(ViewBag.statusStr)
</div>
<form name="form" id="form" method="post">
    <table>
        <thead>
            <tr>
                <td><input type="checkbox" id="chk-all" onclick="cheakall(this)" /></td>
                <td>Id</td>
                <td>标题</td>
                <td>变量名称</td>
                <td>状态</td>
                <td>更多操作</td>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (BaWuClub.Web.Dal.SystemArticle u in Model)
                    {
                        var title = u.Title.Length > 100 ? u.Title.Substring(0, 99) : u.Title;
                        <tr>
                            <td><input type="checkbox" name="chk" value="@u.Id" /></td>
                            <td>@u.Id</td>
                            <td>@title</td>
                            <td>@u.Variables</td>
                            <td>@Html.Raw(BaWuClub.Web.Common.HtmlCommon.GetStatusCodeToStr(u.Status))</td>
                            <td><a href="#/sarticle/edit/@u.Id">编辑</a></td>
                        </tr>
                    }
                }

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="10">
                    @Html.Raw(ViewBag.PageHtmlStr)
                </td>
            </tr>
        </tfoot>
    </table>
</form>