@{
    Layout = "~/areas/bwum/views/shared/_indexlayout.cshtml";
}

@model IEnumerable<BaWuClub.Web.Dal.BannerType>
<div class="comm-btns">
    <h2>广告分类管理(BannerType)</h2>
    <div class="comm-btns-wrap">
        <a class="comm-btn0 iconfont icon-shuaxin" href="#" onclick="window.location.reload()"></a>
        <a class="comm-btn1 btn-general" href="#/banner/bannertypecreate">创建</a>
    </div>
</div>

<div id="notic-wrap">
    @Html.Raw(ViewBag.statusStr)
</div>
<form name="form" id="form" method="post">
    <table>
        <thead>
            <tr>
                <td><input type="checkbox" id="chk-all" onclick="cheakall(this)" /></td>
                <td>Id</td>
                <td>分类名称</td>
                <td>尺寸</td>
                <td>变量</td>
                <td>创建时间</td>
                <td>更多操作</td>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (BaWuClub.Web.Dal.BannerType b in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="chk" value="@b.Id" /></td>
                            <td>@b.Id</td>
                            <td>@b.Name</td>
                            <td>@b.Size</td>
                            <td>@b.Variables</td>
                            <td>@b.VarDate</td>
                            <td><a href="#/banner/bannertypeshow/@b.Id">编辑</a><a onclick="ajaxdelete('/banner/bannertypedel/',@b.Id)">删除</a></td>
                        </tr>
                    }
                }

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="10">
                    @Html.Raw(ViewBag.PageHtmlStr)
                </td>
            </tr>
        </tfoot>
    </table>
</form>