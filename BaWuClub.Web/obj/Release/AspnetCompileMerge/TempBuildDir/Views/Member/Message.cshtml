@{
    Layout = "~/views/shared/_layoutmember.cshtml";
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.user;
    BaWuClub.Web.Dal.User userAuthorize = (BaWuClub.Web.Dal.User)ViewBag.userAuthorize;
    ViewBag.Title = user.NickName + "的个人用户中心-私信列表";
}
@model IEnumerable<BaWuClub.Web.Dal.Message>
<div class="member-main">
    <div class="member-contributions">
        <div class="member-main-wrap">
            <p>
                <span>全部信息(<a href="/member/u-@user.Id/message/">@ViewBag.msgCount</a>)</span>
                <span>未读信息(<a data-href="/member/u-@user.Id/tstr=message&page=1&st=1" id="approve">@ViewBag.unReadMsgCount</a>)</span>
            </p>
            <div class="member-list-wrap">
                <ul>
                    @{
                        if (Model != null) {
                            foreach (var item in Model) { 
                                <li>
                                    <a class="@(item.Status==0?"unread":"")" onclick="setread(this,@item.Id)">@(string.IsNullOrEmpty(item.Title)?"系统消息！":item.Title)</a><span>@(((DateTime)item.Vardate).ToString("yyyy-MM-dd hh:mm"))</span><span onclick="if(confirm('确定删除此信息吗？')){delmsg(this,@item.Id)}" class="message-del-btn fright">删除</span>
                                    <p style="display:none">@item.Message1</p>
                                </li>
                            }
                        }
                    }
                </ul>
            </div>
            <div class="page-wrap">
                @Html.Raw(ViewBag.PageStr)
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/content/scripts/jquery.js"></script>
<script type="text/javascript" src="~/content/scripts/member.js"></script>
