@{
    Layout = "~/views/shared/_layoutmember.cshtml";
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.user;
    BaWuClub.Web.Dal.User userAuthorize = (BaWuClub.Web.Dal.User)ViewBag.userAuthorize;
    ViewBag.Title = user.NickName + "的个人用户中心-投稿";

}
@{    
    var article = new BaWuClub.Web.Dal.Article();
      if (ViewBag.article != null)
      {
          article = ViewBag.article as BaWuClub.Web.Dal.Article;
      }
      var action = article.Id>0? "/member/contributemodify" : "/member/contribute";
}
    <div class="member-main">
        <div class="member-contributions">
            <div class="member-main-wrap">
                <div class="input-box">
                    <form name="form" action="@action" method="post" onsubmit="SetEditorValue();return checkSubmit(this);">
                        <label id="tips-wrap" style="color:red;"></label>
                        @{if (article.Id>0)
                          {
                              <input name="id" value="@article.Id" type="hidden" />
                          }}
                        <p><b>标题：</b><input name="title" value="@article.Title" class="input-text" type="text" data-hint="标题不能为空！" data-required="true" /></p>
                        <p><b>标签：</b><input name="tags" value="@article.Tags" class="input-text" type="text"/><span>多标签请用英文的逗号“,”隔开</span></p>
                        <div class="input-box-ha">
                            <b>内容：</b>
                            <textarea name="editor" id="editor">@article.Context</textarea>
                        </div>
                        <p>
                            <b>&nbsp;</b><input type="submit" value="提交" class="btn-sub" />
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

<script type="text/javascript" src="~/content/scripts/jquery.js"></script>
<script type="text/javascript" src="~/content/scripts/member.js"></script>
<script type="text/javascript" src="~/content/ckeditor-full/ckeditor.js"></script>
<script type="text/javascript">
    var editor = CKEDITOR.replace('editor');
    function SetEditorValue() {
        var context = editor.document.getBody().getHtml(); //头像的上传与投稿冲突
        var textarea = document.getElementsByTagName("textarea")[0];
        textarea.value = context;
    }
</script>