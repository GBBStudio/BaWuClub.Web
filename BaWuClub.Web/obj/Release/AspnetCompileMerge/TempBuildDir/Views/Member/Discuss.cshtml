@{
    Layout = "~/views/shared/_layoutmember.cshtml";
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.user;
    BaWuClub.Web.Dal.User userAuthorize = (BaWuClub.Web.Dal.User)ViewBag.userAuthorize;
    ViewBag.Title = user.NickName + "的个人用户中心-论坛";
}
@model IEnumerable<BaWuClub.Web.Dal.Article>

<div class="member-main">
    <div class="member-menu">
        <a class="selected" onclick="baseload('/member/u-@user.Id/getlist?st=0&tstr=forum&page=1')">帖子</a>
        <a onclick="baseload('/member/u-@user.Id/getlist?st=1&tstr=forum&page=1')"> 活动</a>
        <a onclick="baseload('/member/u-@user.Id/getlist?st=2&tstr=forum&page=1');"> 任务</a>
        <a href="#group" style="display:none"> 组织</a>
    </div>
    <div class="member-main-wrap fleft">
        <div class="member-list-wrap member-menu-right-list">
            <ul></ul>
        </div>
        <div class="page-wrap">
            @Html.Raw(ViewBag.PageStr)
        </div>
    </div>
</div>
<script type="text/javascript" src="~/content/scripts/jquery.js"></script>
<script type="text/javascript" src="~/content/scripts/member.js"></script>
<script type="text/javascript">
    baseload('/member/u-@user.Id/getlist?st=0&tstr=forum&page=1');
    function baseload(url) {
        loadonpage(url);
    }
</script>
