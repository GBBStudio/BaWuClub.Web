<style>
    .tg-wrap strong{font-size:14px;}
    .c-tags{margin:8px 0;}
    .c-tags span{background:#259;color:#fff;font-size:12px;margin:0px 5px;padding:3px 5px;}
    .c-tags span a{padding:0px 5px;cursor:pointer}
    .c-content{width:80%;margin-left:40px;margin-top:10px;margin-bottom:10px;}
</style>
@{
    Layout = "~/areas/bwum/views/shared/_indexlayout.cshtml";
}
@model BaWuClub.Web.Dal.Article
@{
    var str = Model.Status == 1 ? "取消通过" : "审核通过";
   // var action = Model.Status == 1 ? "/setdisable" : "setenable";
}
<div class="comm-btns">
    <h2>投稿预览审核</h2>
    <a class="btn-back iconfont icon-chexiao" href="#/contribute/index">返回列表</a>
</div>
@Html.Raw(ViewBag.StatusStr)
<div class="tg-wrap">
    <form method="post" name="frame" action="/contribute/SetCheck">
        <div class="c-title">
            <strong>标题：</strong>
            <span>@Model.Title</span>
            <input name="id" value="@Model.Id" type="hidden" />
        </div>
        <div class="c-tags">
            <strong>标签：</strong>
            <input type="hidden" value="@Model.Tags" name="tags" id="tags" />
            @{
                var tags = Model.Tags;
                System.Text.StringBuilder listStr = new System.Text.StringBuilder();
                if (!string.IsNullOrEmpty(tags))
                {
                    string[] tagArray = tags.Split(',');
                    foreach (string t in tagArray)
                    {
                        if (t.Length > 0) { 
                        listStr.Append("<span><i>" + t + "</i><a title=\"取消\">X</a></span>");}
                    }
                }
            }
            @Html.Raw(listStr.ToString())
        </div>
        <div class="c-content-wrap">
            <strong>内容：</strong>
            <div class="c-content">
                @Html.Raw(Model.Context)
            </div>
        </div>
        <div class="comm-btns-wrap">
            <input type="submit" value="@str" class="btn comm-btn2" />
            <a class="btn comm-btn1" href="#/contribute/index">取消</a>
        </div>
    </form>
</div>
<script type="text/javascript">
    $(function () {
        $(".c-tags a").each(function () {
            var _this = $(this);
            _this.click(function () {
                _this.parent().remove();
                $("#tags").val(GetTags());
            });
        });
    })
    function GetTags() {
        var _tag="",_tags="";
        $(".c-tags span").each(function () {
            _tag = $(this).children("i").text();
            _tags += _tag + ",";
        });
        if(_tags.length>0)
            _tags.substring(0, _tags.length - 1)
        return _tags;
    }
</script>