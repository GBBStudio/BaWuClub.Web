@{
    Layout = "~/areas/bwum/views/shared/_indexlayout.cshtml";
}

@model IEnumerable<BaWuClub.Web.Dal.ViewQuestion>
<div class="comm-btns">
    <h2>提问管理</h2>
    <div class="comm-btns-wrap">
        <a class="comm-btn0 iconfont icon-shuaxin" href="#" onclick="window.location.reload()"></a>
        <a class="btn comm-btn2" href="#" data-url="/question/multidel">删除</a>
    </div>
    </div>
<div id="notic-wrap">
    @Html.Raw(ViewBag.statusStr)
</div>
<form name="form" id="form" method="post">
    <table>
        <thead>
            <tr>
                <td  width="40px;"><input type="checkbox" id="chk-all" onclick="cheakall(this)" /></td>
                <td  width="40px;">Id</td>
                <td >标题</td>
                <td width="100px;">用户</td>
                <td width="100px;">浏览量</td>
                <td>发布时间</td>
                <td>更多操作</td>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (BaWuClub.Web.Dal.ViewQuestion u in Model)
                {
                    var title = u.Title.Length > 100 ? u.Title.Substring(0, 99) : u.Title;
                    <tr>
                        <td><input type="checkbox" name="chk" value="@u.Id" /></td>
                        <td>@u.Id</td>
                        <td style="text-align:left">@title</td>
                        <td>@u.NickName</td>
                        <td>@u.Views</td>
                        <td>@u.VarDate</td>
                        <td><a href="#/question/show/@u.Id">预览</a><a onclick="ajaxdelete('/question/del/',@u.Id)">删除</a></td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="10">
                    @Html.Raw(ViewBag.PageHtmlStr)
                </td>
            </tr>
        </tfoot>
    </table>
</form>