@{
    Layout = "~/areas/bwum/views/shared/_indexlayout.cshtml";
}
@model IEnumerable<BaWuClub.Web.Dal.Tag>
<div class="comm-btns">
    <h2>标签管理</h2>
    <div class="comm-btns-wrap">
        <a class="comm-btn0 iconfont icon-shuaxin" href="#" onclick="window.location.reload()"></a>
        <a class="btn comm-btn2" href="#" data-url="tag/del">删除</a>
        </div>
    </div>
<div id="notic-wrap">
    @Html.Raw(ViewBag.statusStr)
</div>
<table>
    <thead>
        <tr>
            <td><input type="checkbox" id="chk-all" /></td>
            <td>Id</td>
            <td>标签</td>
            <td>更多操作</td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (BaWuClub.Web.Dal.Tag u in Model)
            {
                <tr>
                    <td><input type="checkbox" name="chks" value="@u.Id" /></td>
                    <td>@u.Id</td>
                    <td>@u.TagName</td>
                    <td><a href="#/tag/edit/@u.Id">编辑</a><a onclick="ajaxdelete('/tag/del/',@u.Id)">删除</a></td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="10">
                @Html.Raw(ViewBag.PageHtmlStr)
            </td>
        </tr>
    </tfoot>
</table>