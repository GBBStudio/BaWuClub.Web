@{
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.User;
    var intro = user.Intro;
    intro = intro.Length > 46 ? intro.Substring(0, 45)+"..." : intro;
}

<div class="member-top">
    <div class="member-cover fleft">
        @{
            if (!string.IsNullOrEmpty(user.Cover)) { 
              <img src="/uploads/avatar/big/@user.Cover" alt="" />      
            }     
            else{                
                <img src="~/content/images/no-img.jpg" alt="member cover" />  
            }
        }
    </div>
    <div class="member-text fleft">
        <div class="member-name">
            <span>@user.NickName</span>
            <p>@intro</p>
    </div>
</div>
<div class="member-force">目前积分:@user.Points</div>
</div>