@{
    Layout = "~/Areas/bwum/Views/Shared/_indexlayout.cshtml";
}

<div id="layout-wrap">
    <div class="views-wrap">
        <div id="chart-container" class="fleft"></div>
        <div class="views-text">
            <p><span>今日浏览量：</span>@ViewBag.TodayView</p>
            <p><span class="border2">总浏览量：</span>@ViewBag.CountView</p>
        </div>
    </div>
    <div class="views-wrap">
        <div class="views-title">其他统计</div>
        <form name="form" id="form" method="post">
            <table>
                <thead>
                    <tr>
                        <td>类别</td>
                        <td>今日</td>
                        <td>总数</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>用户</td>
                        <td>@ViewBag.newAccounts</td>
                        <td>@ViewBag.accounts</td>
                    </tr>
                    <tr>
                        <td>投稿</td>
                        <td>@ViewBag.newArticles</td>
                        <td>@ViewBag.articles</td>
                    </tr>
                    <tr>
                        <td>问题</td>
                        <td>@ViewBag.newAsks</td>
                        <td>@ViewBag.asks</td>
                    </tr>
                    <tr>
                        <td>回答</td>
                        <td>@ViewBag.newAnswers</td>
                        <td>@ViewBag.answers</td>
                    </tr>
                    <tr>
                        <td>帖子数(全部)</td>
                        <td>@ViewBag.newTopics</td>
                        <td>@ViewBag.topics</td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
<div style="color:#999;font-size:10px;position:absolute;bottom:60px;padding-left:50px;display:none">
    <i> &copy; www.bawu.com Core: ASP.NET MVC 4.0  Coder:<a href="mail:wesen@gbbweb.cn" target="_blank">WESEN</a></i>
</div>
<script type="text/javascript" src="~/Content/Scripts/highcharts.js"></script>
<script type="text/javascript">
    $(function () {
        $('#chart-container').highcharts({
            title: {
                text: 'BaWu电商网7日浏览量',
                x: -20 //center
            },
            subtitle: {
                text: 'Source: www.xiakexing.cn',
                x: -20
            },
            xAxis: {
                categories: [@ViewBag.Categories]
            },
            yAxis: {
                title: {
                    text: '浏览的次数'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: '次'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{
                name: '浏览的次数',
                data: [@ViewBag.Series]
            }]
        });
    });
</script>