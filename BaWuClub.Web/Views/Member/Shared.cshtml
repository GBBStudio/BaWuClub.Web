@{
    Layout = "~/views/shared/_layoutmember.cshtml";
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.user;
    BaWuClub.Web.Dal.User userAuthorize = (BaWuClub.Web.Dal.User)ViewBag.userAuthorize;
    ViewBag.Title = user.NickName + "的个人用户中心-文档分享";
}
@model IEnumerable<BaWuClub.Web.Dal.Document>
<div class="member-main">
    <div class="member-contributions">
        <div class="member-main-wrap">
            <p>
                <a href="/download/uploaddocs">即可共享</a>
                <span>全部共享(<a href="/member/u-@user.Id/shared/">@ViewBag.docsCount</a>)</span>
                <span>已审核(<a data-href="/member/u-@user.Id/tstr=shared&page=1&st=1" id="approve">@ViewBag.docsCheckedCount</a>)</span>
            </p>
            <div class="member-list-wrap">
                <ul>
                    @{
                        if (Model != null) {
                            foreach (var item in Model) { 
                                <li><a href="/download/item/@item.Id">@item.Title</a>
                            <span>@(((DateTime)item.VarDate).ToString("yyyy-MM-dd hh:mm"))</span>
                            <span class="c-@(((Int32)item.Status == 1) ? "enable" : "disable")">@(((Int32)item.Status == 1) ? "已审核" : "待审核")</span>        
                    </li>
                            }
                        }
                    }
                </ul>
            </div>
            <div class="page-wrap">
                @Html.Raw(ViewBag.PageStr)
            </div>
            <div class="member-explain-desc explain-wrap">
                @Html.Raw(ViewBag.SharedDesc)
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/content/scripts/jquery.js"></script>
<script type="text/javascript" src="~/content/scripts/member.js"></script>