@{
    Layout = "~/views/shared/_layoutmember.cshtml";
    ViewBag.Title = "个人用户中心-";
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.User;
}
@model IEnumerable<BaWuClub.Web.Dal.Article>
<div class="member-title">
    <a href="/member/u-@user.Id/Show">资料</a>
    <a href="/member/u-@user.Id/contributelist" class="selected">投稿</a>
    <a href="/member/u-@user.Id/asks">问题</a>
    <a href="/member/u-@user.Id/answers">回答</a>
    <a href="/member/u-@user.Id/certification">认证</a>
    <a href="/member/u-@user.Id/shared">共享</a>
</div>
<div class="member-main">
    <div class="member-contributions">
        <div class="member-main-wrap">
            <p>
                <a href="/member/u-@ViewBag.User.Id/contribute">写投稿</a>
                <span>全部投稿(<a href="/member/u-@user.Id/contributelist/">@ViewBag.ContributeAllCount</a>)</span>
                <span>已审核(<a data-href="/member/u-@user.Id/getcontributeapprovelist/1" id="approve">@ViewBag.ContributeCheckedCount</a>)</span>
            </p>
            <div class="contribute-list">
                <ul>
                    @{
                        foreach (var a in Model){
                            <li>
                                <a href="/column/show/@a.Id">@a.Title</a>
                                <span>@a.PutDate</span>
                            </li>
                        }
                    }
                </ul>
            </div>
            <div class="page-wrap">
                @Html.Raw(ViewBag.PageStr)
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/content/scripts/jquery.js"></script>
<script type="text/javascript" src="~/content/scripts/member.js"></script>
<script type="text/javascript">
    $(function () {
        $("#approve").click(function () {
            $(".contribute-list ul").html("<img src=\"/content/images/loading.gif\" alt=\"\"/>");
            $.get($(this).attr("data-href"), function (data) {
                var json = eval(data);
                $(".page-wrap").html(json.pagestr);
                $(".contribute-list ul").html(json.context);
            }, "json");
        });
    })
</script>