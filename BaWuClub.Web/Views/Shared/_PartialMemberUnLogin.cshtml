@{
    BaWuClub.Web.Dal.User user = (BaWuClub.Web.Dal.User)ViewBag.User;
    var intro = user.Intro;
}
<div class="member-top">
    <div class="member-cover fleft">
        @{
            if (!string.IsNullOrEmpty(user.Cover)) { 
              <img src="/uploads/avatar/small/@user.Cover" alt="" />      
            }     
            else{                
                <img src="~/content/images/no-img.jpg" alt="member cover" />  
            }
        }
    </div>
    <div class="member-text fleft">
        <div class="member-name">
            <span>@user.NickName</span>
            <p>@intro</p>
        </div>
    </div>
    <div class="member-force"></div>
</div>
<div class="member-title">
    <a href="/member/u-@user.Id/show" class="selected">资料</a>
    <a href="/member/u-@user.Id/contributelist">投稿</a>
    <a href="/member/u-@user.Id/askandanswer">问答</a>
    <a href="/member/u-@user.Id/discuss">论坛</a>
</div>